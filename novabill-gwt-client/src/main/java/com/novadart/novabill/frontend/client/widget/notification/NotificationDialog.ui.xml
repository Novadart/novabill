<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<ui:style>
		.body {
			border: 0.1em solid #DDD;
			padding: 1.5em 2em;
			background-color: #FFF;
			margin: 0 auto;
			width: 25em;
		}
		
		.message {
			text-align: justify;
			font-size: 1.2em;
		}
		
		.buttonsWrapper {
			text-align: center;
			margin-top: 1em;
		}
		
		.buttonsWrapper button {
			width: 5em;
		}
		
		.buttonsWrapper button+button {
			margin-left: 2em;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.body}">
		<g:HTML ui:field="message" styleName="{style.message}" />
		<g:FlowPanel ui:field="buttons" styleName="{style.buttonsWrapper}"></g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 