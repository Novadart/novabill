<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="2005001" android:versionName="2.5.1" package="com.novadart.novabill.android">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>

    <application android:allowBackup="true" android:icon="@drawable/novabill" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:name="com.novadart.novabill.android.DispatcherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.novadart.novabill.android.HomeActivity">
        </activity>

        <service android:name="com.novadart.novabill.android.ManagerService"/>

        <receiver android:enabled="true" android:name="com.novadart.novabill.android.StartManagerServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>

        <service android:name="com.novadart.novabill.android.authentication.NovabillAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data android:name="android.accounts.AccountAuthenticator" android:resource="@xml/authenticator"/>
        </service>

        <activity android:name="com.novadart.novabill.android.authentication.LoginActivity">
        </activity>
        <activity android:label="@string/title_activity_select_account" android:name="com.novadart.novabill.android.SelectAccountActivity">
        </activity>

        <provider android:authorities="com.novadart.novabill" android:exported="true" android:grantUriPermissions="true" android:label="NovabillProvider" android:name="com.novadart.novabill.android.content.provider.NovabillContentProvider">
        </provider>

        <service android:exported="true" android:name="com.novadart.novabill.android.sync.NovabillSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_adapter"/>
        </service>

        <activity android:label="@string/title_activity_clients" android:name="com.novadart.novabill.android.ClientsActivity" android:parentActivityName="com.novadart.novabill.android.HomeActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.novadart.novabill.android.HomeActivity"/>
        </activity>
        <activity android:label="@string/title_activity_client_details" android:name="com.novadart.novabill.android.ClientDetailsActivity">
        </activity>
    </application>

    <instrumentation android:name="android.test.InstrumentationTestRunner" android:targetPackage="com.novadart.novabill.android">
    </instrumentation>

</manifest>