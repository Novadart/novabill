<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N" field="i18n"></ui:with>
	<ui:with type="com.novadart.novabill.frontend.client.resources.ImageResources" field="res"></ui:with>
	
	<g:FlowPanel ui:field="contacttable">
		<g:Image ui:field="closeButton" styleName="closeButton" url="{res.fancy_close.getSafeUri.asString}"></g:Image>
		<g:FlowPanel ui:field="contactForm">
			<g:HTMLPanel ui:field="contactLoading" />
			<g:HTMLPanel ui:field="contactHolder">
					<p>
						<label for="contactable-name">
							Nome
							<span class="contactable-green"> * </span>
						</label>
						<br />
						<g:TextBox ui:field="contactableName" styleName="contactable-contact contactable-validate" name="name" maxLength="255" />
					</p>
					<p>
						<label for="contactable-email">
							Email
							<span class="contactable-green"> * </span>
						</label>
						<br />
						<g:TextBox ui:field="contactableEmail" styleName="contactable-contact contactable-validate" name="email" maxLength="255" />
					</p>
					<p>
						<label for="contactable-dropdown">Tipologia Segnalazione </label>
						<br />
						<select ui:field="contactableDdown" name="dropdown" class="contactable-dropdown">
							<option value="Voglio suggerire una nuova fuzionalit&agrave;">Voglio suggerire una nuova fuzionalità</option>
							<option value="Voglio segnalare un malfunzionamento">Voglio segnalare un malfunzionamento</option>
							<option value="Altro">Altro</option>
						</select>
					</p>
					<p>
						<label for="contactable-message">
							Messaggio
							<span class="contactable-green"> * </span>
						</label>
						<br />
						<g:TextArea ui:field="contactableMessage" name="message" styleName="contactable-message contactable-validate"/>
					</p>
					<p>
						<g:Button ui:field="contactableSubmit" styleName="contactable-submit" text="Invia" />
					</p>
					<p class="contactable-disclaimer">Mandaci pure una tua impressione sul servizio. Il tuo
						aiuto ci permetterà di migliorare :)</p>
			</g:HTMLPanel>
		</g:FlowPanel>

	</g:FlowPanel>
</ui:UiBinder> 