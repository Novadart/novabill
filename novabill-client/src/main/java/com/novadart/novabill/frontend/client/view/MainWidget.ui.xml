<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>
	<ui:with
		type="com.novadart.novabill.frontend.client.resources.ImageResources"
		field="img"></ui:with>

	<g:DockLayoutPanel ui:field="dockWidget" styleName="MainWidget" unit='EM'>

		<g:north size="3">
			<g:FlowPanel styleName="header">
				<g:FlowPanel styleName="logoBar">
					<g:Anchor ui:field="logoAnchor" styleName="productName"
						text="{i18n.productName}"></g:Anchor>
					<g:Label ui:field="feedback" styleName="feedbackButton" text="{i18n.feedback}"></g:Label>
				</g:FlowPanel>
				<g:FlowPanel styleName="menuBar">
					<g:Button styleName="homeButton button" text="{i18n.home}"
						ui:field="home"></g:Button>
					<g:Button styleName="myDataButton button" text="{i18n.myData}"
						ui:field="myData"></g:Button>
					<g:Anchor ui:field="changePasswordAnchor" styleName="changePassword" />
					<g:Anchor styleName="exitButton" text="{i18n.logout}"
						ui:field="logout"></g:Anchor>
				</g:FlowPanel>
				<g:HTML styleName="stats" ui:field="stats"></g:HTML>
			</g:FlowPanel>
		</g:north>

		<g:west size="25">
			<g:SimplePanel styleName="westContainer" ui:field="westContainer"></g:SimplePanel>
		</g:west>

		<g:center>
			<g:SimplePanel styleName="centerContainer" ui:field="centerContainer"></g:SimplePanel>
		</g:center>

		<g:south size="2">
			<g:HorizontalPanel styleName="southContainer">
				<g:HTML styleName="banner" ui:field="businessBanner"></g:HTML>
			</g:HorizontalPanel>
		</g:south>

	</g:DockLayoutPanel>
</ui:UiBinder> 