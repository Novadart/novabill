<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.novadart.gwtshared.client.validation.widget" xmlns:f="urn:import:com.novadart.novabill.frontend.client.widget" xmlns:gwtshared="urn:import:com.novadart.gwtshared.client">
	
	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N" field="i18n"></ui:with>
	
	<ui:with type="com.novadart.novabill.frontend.client.resources.GlobalCss" field="g"></ui:with>
	
	<ui:style>
		.buttons {
			margin: 1em auto 0;
		}
		
		.buttons button {
			width: 10em;
			margin-top: 1em;
		}
		
		.cancel {
			margin-left: 1em;
		}
		
		.container {
			padding: 1em;
		}
		
		.title {
			text-align: center;
			padding: 0.2em;
			font-size: 1.4em;
			font-weight: bold;
			margin-bottom: 1em;
		}
		
		.label {
			padding: 0.5em;
		}
		
		.value {
			margin: 0.3em 0.5em;
			width: 35em;
		}
		
		.daysVal {
			float: left;
			width: 5em;
			text-align: center;
		}
		
		.daysLabel {
			float: left;
			padding: 0.5em;
		}
		
		.daysCont {
			
		}
		
	</ui:style>
	
	<g:FlowPanel styleName="{style.container}">
		<g:Label styleName="{style.title}" text="{i18n.createPaymentType}" />
		<g:Grid>
			<g:row>
				<g:customCell><g:Label styleName="{style.label}" text="{i18n.name}" /></g:customCell>
				<g:customCell><v:ValidatedTextBox styleName="{style.value}" ui:field="name" /></g:customCell>
			</g:row>
			<g:row>
				<g:customCell><g:Label styleName="{style.label}" text="{i18n.paymentNote}" /></g:customCell>
				<g:customCell><f:ValidatedTextArea styleName="{style.value}" ui:field="paymentNote" /> </g:customCell>
			</g:row>
			<g:row>
				<g:customCell><g:Label styleName="{style.label}" text="{i18n.dateGeneration}" /></g:customCell>
				<g:customCell><g:ListBox styleName="{style.value}" ui:field="dateGenerator" /></g:customCell>
			</g:row>
			<g:row>
				<g:customCell><g:Label styleName="{style.label}" ui:field="paymentDelayLabel" text="{i18n.paymentDelay}" /></g:customCell>
				<g:customCell>
					<g:FlowPanel styleName="{style.value} {style.daysCont}" ui:field="paymentDelayValue">
						<v:ValidatedTextBox styleName="{style.daysVal}" ui:field="days" text="30"/>
						<g:Label styleName="{style.daysLabel}" text="{i18n.days}" />
					</g:FlowPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:HorizontalPanel styleName="{style.buttons}">
			<gwtshared:LoaderButton ui:field="ok" text="{i18n.submit}" />
			<g:Button ui:field="cancel" text="{i18n.cancel}" styleName="{g.button} {style.cancel}"></g:Button>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder> 