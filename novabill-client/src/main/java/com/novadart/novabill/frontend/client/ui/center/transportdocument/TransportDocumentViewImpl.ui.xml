<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:i="urn:import:com.novadart.novabill.frontend.client.ui.center.invoice"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client" 
	xmlns:v="urn:import:com.novadart.gwtshared.client.validation.widget"
	xmlns:t="urn:import:com.novadart.novabill.frontend.client.ui.center"
	xmlns:textbox="urn:import:com.novadart.gwtshared.client.textbox" xmlns:f="urn:import:com.novadart.novabill.frontend.client.ui.widget">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<g:FlowPanel>
		<g:Label ui:field="titleLabel" styleName="newTransportDocument" text="{i18n.newTransportDocument}"></g:Label>

		<g:ScrollPanel styleName="docScroll" ui:field="docScroll">
			<g:FlowPanel styleName="docScrollBody">
				<g:Grid styleName="documentMainDetails">
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.client}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="box clientName" ui:field="clientName"></g:Label>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.transportDocumentNumber}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="box number"	ui:field="number"></g:Label>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.date}"></g:Label>
						</g:customCell>
						<g:customCell>
							<d:DateBox styleName="box date" ui:field="date"></d:DateBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.note}"></g:Label>
						</g:customCell>
						<g:customCell>
							<f:ValidatedTextArea styleName="box note" ui:field="note"></f:ValidatedTextArea>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.numberOfPackages}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox styleName="box numberOfPackages"
								ui:field="numberOfPackages" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.transporter}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox styleName="box transporter"
								ui:field="transporter" maxLength="255" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.transportationResponsibility}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox styleName="box transportationResponsibility"
								ui:field="transportationResponsibility" maxLength="255"></g:TextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.tradeZone}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox styleName="box tradeZone" ui:field="tradeZone" maxLength="255"></g:TextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.transportStartDate}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:HorizontalPanel>
								<g:Label styleName="sublabel date" text="{i18n.date}"></g:Label>
								<d:DateBox styleName="box date" ui:field="transportStartDate"></d:DateBox>
								<g:Label styleName="sublabel time" text="{i18n.time}"></g:Label>
								<v:ValidatedListBox styleName="box time hour"
									ui:field="hour"></v:ValidatedListBox>
								<v:ValidatedListBox styleName="box time minute"
									ui:field="minute"></v:ValidatedListBox>
							</g:HorizontalPanel>

						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.fromAddress}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:HorizontalPanel styleName="addressBox">
								<g:Grid styleName="addressGrid">
									<g:row>
										<g:customCell>
											<textbox:RichTextBox styleName="box companyName RichTextBox-labelStyle"
												ui:field="fromAddrCompanyName" maxLength="255"/>
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<textbox:RichTextBox styleName="box streetName RichTextBox-labelStyle"
												ui:field="fromAddrStreetName" maxLength="255" />
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<textbox:RichTextBox styleName="box postcode RichTextBox-labelStyle"
												ui:field="fromAddrPostCode" maxLength="10" />
										</g:customCell>
										<g:customCell>
											<textbox:RichTextBox styleName="box city RichTextBox-labelStyle"
												ui:field="fromAddrCity" maxLength="60" />
										</g:customCell>
										<g:customCell>
											<v:ValidatedListBox styleName="box province"
												ui:field="fromAddrProvince" />
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<v:ValidatedListBox styleName="box" ui:field="fromAddrCountry" />
										</g:customCell>
									</g:row>
								</g:Grid>
								<g:Button styleName="button loadDefaultsButton"
									ui:field="fromAddrButtonDefault" text="{i18n.loadFromAddress}"></g:Button>
							</g:HorizontalPanel>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="label" text="{i18n.toAddress}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:HorizontalPanel styleName="addressBox">
								<g:Grid styleName="addressGrid">
									<g:row>
										<g:customCell>
											<textbox:RichTextBox styleName="box companyName RichTextBox-labelStyle"
												ui:field="toAddrCompanyName" maxLength="255" />
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<textbox:RichTextBox styleName="box streetName RichTextBox-labelStyle" 
												ui:field="toAddrStreetName" maxLength="255" />
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<textbox:RichTextBox styleName="box postcode RichTextBox-labelStyle"
												ui:field="toAddrPostCode" maxLength="10" />
										</g:customCell>
										<g:customCell>
											<textbox:RichTextBox styleName="box city RichTextBox-labelStyle"
												ui:field="toAddrCity" maxLength="60" />
										</g:customCell>
										<g:customCell>
											<v:ValidatedListBox styleName="box province"
												ui:field="toAddrProvince" />
										</g:customCell>
									</g:row>
									<g:row>
										<g:customCell>
											<v:ValidatedListBox styleName="box" ui:field="toAddrCountry" />
										</g:customCell>
									</g:row>
								</g:Grid>
								<g:Button styleName="button loadDefaultsButton"
									ui:field="toAddrButtonDefault" text="{i18n.loadToAddress}"></g:Button>
							</g:HorizontalPanel>
						</g:customCell>
					</g:row>
				</g:Grid>


				<g:SimplePanel styleName="itemTableContainer">
					<t:ItemInsertionForm ui:field="itemInsertionForm"></t:ItemInsertionForm>
				</g:SimplePanel>

				<g:SimplePanel>
					<g:HorizontalPanel>
						<g:VerticalPanel styleName="totalContainer totalBeforeTaxes">
							<g:Label styleName="label" text="{i18n.totalBeforeTaxes}"></g:Label>
							<g:Label styleName="total" ui:field="totalBeforeTaxes"></g:Label>
						</g:VerticalPanel>
						<g:VerticalPanel styleName="totalContainer totalTax">
							<g:Label styleName="label" text="{i18n.totalTax}"></g:Label>
							<g:Label styleName="total" ui:field="totalTax"></g:Label>
						</g:VerticalPanel>
						<g:VerticalPanel styleName="totalContainer totalAfterTaxes">
							<g:Label styleName="label" text="{i18n.totalAfterTaxes}"></g:Label>
							<g:Label styleName="total" ui:field="totalAfterTaxes"></g:Label>
						</g:VerticalPanel>
					</g:HorizontalPanel>
				</g:SimplePanel>
			</g:FlowPanel>
		</g:ScrollPanel>
		
		<g:FlowPanel styleName="docControls" ui:field="docControls">
			<g:Button styleName="modifyButton button" ui:field="modifyDocument"
				text="{i18n.saveModifications}"></g:Button>
			<g:Button styleName="createButton button" ui:field="createTransportDocument"
				text="{i18n.createTransportDocument}"></g:Button>
			<g:Button ui:field="abort" styleName="abortButton button"
				text="{i18n.cancel}"></g:Button>
		</g:FlowPanel>
	</g:FlowPanel>


</ui:UiBinder> 