<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:com.novadart.gwtshared.client.textbox"
	xmlns:v="urn:import:com.novadart.gwtshared.client.validation.widget"
	xmlns:n="urn:import:com.novadart.novabill.frontend.client.widget.notification">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<ui:with field="g"  type="com.novadart.novabill.frontend.client.resources.GlobalCss" />

	<ui:style field="s" >
		.businessLabel {
			margin-right: 1em;
			width: 10em;
			font-size: 1.1em;
		}
		
		.welcomeMessage {
			background-color: #FFFFB1;
			padding: 1em;
			border: 0.1em solid #333;
			width: 30em;
			margin: 0 auto;
			font-size: 1.2em;
		}
		
		.bootstrapDialogBody {
			background-color: #FFE;
			padding: 0.5em;
		}
		
		.gridContainer {
			margin: 0 auto;
			padding: 2em;
		}
		
		.submit {
			margin: 0 auto !important;
			display: block !important;
		}
		
		.validatedListBox,.validatedTextBox {
			width: 20em;
			margin: 0.3em;
		}
		
	</ui:style>


	<g:FlowPanel styleName="{s.bootstrapDialogBody}">
		<g:HTML ui:field="welcomeMessage" styleName="{s.welcomeMessage}"
			HTML="{i18n.bootstrapWelcomeMessage}" />

		<g:SimplePanel styleName="{s.gridContainer}">
			<g:Grid>
				<g:row>
					<g:customCell >
						<g:Label  styleName="{s.businessLabel}" text="{i18n.companyName}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="name" maxLength="255" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.ssn}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="ssn" maxLength="25"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.vatID}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="vatID" maxLength="25"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.address}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="address"
							maxLength="255"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.city}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="city" maxLength="60"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.postcode}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="postcode"
							maxLength="10"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.province}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedListBox ui:field="province"></v:ValidatedListBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.country}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedListBox ui:field="country"></v:ValidatedListBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.phone}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="phone" maxLength="25"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.mobile}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="mobile"
							maxLength="25"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.email}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="email" maxLength="255"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.fax}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="fax" maxLength="25"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label styleName="{s.businessLabel}" text="{i18n.web}"></g:Label>
					</g:customCell>
					<g:customCell>
						<v:ValidatedTextBox styleName="{s.validatedTextBox}" ui:field="web" maxLength="255"></v:ValidatedTextBox>
					</g:customCell>
				</g:row>
			</g:Grid>

		</g:SimplePanel>

		<n:InlineNotification ui:field="inlineNotification" />

		<g:Button styleName="{g.actionButton} {s.submit}" ui:field="confirm"
			text="{i18n.submit}"></g:Button>

	</g:FlowPanel>

</ui:UiBinder> 