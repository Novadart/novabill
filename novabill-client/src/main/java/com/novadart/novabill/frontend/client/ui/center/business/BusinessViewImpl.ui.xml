<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:com.novadart.gwtshared.client.textbox"
	xmlns:v="urn:import:com.novadart.gwtshared.client.validation.widget">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n" />

	<g:FlowPanel styleName="BusinessView">
		<g:SimplePanel>
			<g:Button styleName="saveData" ui:field="saveData" text="{i18n.saveModifications}"></g:Button>
		</g:SimplePanel>


		<g:HorizontalPanel>

			<g:SimplePanel styleName="gridContainer">
				<g:Grid styleName="grid">
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.companyName}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="name"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.ssn}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="ssn"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.vatID}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="vatID"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.address}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="address"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.city}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="city"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.postcode}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="postcode"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.province}"></g:Label>
						</g:customCell>
						<g:customCell>
							<g:ListBox styleName="provinceList" ui:field="province"></g:ListBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.country}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="country"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.phone}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="phone"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.mobile}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="mobile"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.email}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="email"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.fax}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="fax"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label styleName="businessLabel" text="{i18n.web}"></g:Label>
						</g:customCell>
						<g:customCell>
							<v:ValidatedTextBox ui:field="web"></v:ValidatedTextBox>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:SimplePanel>

			<g:SimplePanel styleName="logoContainerWrapper">
				<g:VerticalPanel styleName="logoContainer">
					<g:Image ui:field="logo" styleName="logo"></g:Image>
					<g:FormPanel ui:field="formPanel" styleName="formPanel" />
				</g:VerticalPanel>
			</g:SimplePanel>

		</g:HorizontalPanel>

	</g:FlowPanel>

</ui:UiBinder> 