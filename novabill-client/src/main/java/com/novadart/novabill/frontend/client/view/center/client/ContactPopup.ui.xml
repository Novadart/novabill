<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<ui:style>
		.wrapper {
			padding: 1em;
			border: 1px solid #DDD;
			background-color: white;
			\-moz-box-shadow: 2px 2px 2px #AAA;
			\-webkit-box-shadow: 2px 2px 2px #AAA;
			box-shadow: 2px 2px 2px #AAA;
		}
		
		.grid {
			
		}
		
		.grid .label {
			padding: 0.2em 0;
			font-size: 1.1em;
			font-weight: bold;
			width: 8em;
		}
		
		.grid .value {
			padding: 0.2em 0;
			font-size: 1.1em;
			min-width: 6em;
		}
	</ui:style>

	<g:SimplePanel styleName="{style.wrapper}">
		<g:Grid styleName="{style.grid}">
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}" text="{i18n.name}" />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.value}" ui:field="name" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}" text="{i18n.surname}" />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.value}" ui:field="surname" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}" text="{i18n.email}" />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.value}" ui:field="email" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}" text="{i18n.mobile}" />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.value}" ui:field="mobile" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}" text="{i18n.phone}" />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.value}" ui:field="phone" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}" text="{i18n.fax}" />
				</g:customCell>
				<g:customCell>
					<g:Label styleName="{style.value}" ui:field="fax" />
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:SimplePanel>

</ui:UiBinder> 