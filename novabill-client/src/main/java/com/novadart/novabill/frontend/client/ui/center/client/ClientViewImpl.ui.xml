<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:i="urn:import:com.novadart.novabill.frontend.client.ui.widget.list.impl">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<g:FlowPanel>
		<g:Label styleName="clientName" ui:field="clientName"></g:Label>
		<g:HTML styleName="clientDetails" ui:field="clientDetails"></g:HTML>
		<g:HorizontalPanel styleName="clientOptions">
			<g:Label styleName="modifyClient" ui:field="modifyClient"
				text="{i18n.modifyClient}"></g:Label>
			<g:Label styleName="cancelClient" ui:field="cancelClient"
				text="{i18n.cancelClient}"></g:Label>
		</g:HorizontalPanel>

		<g:SimpleLayoutPanel styleName="clientMainBody">
			<g:TabLayoutPanel ui:field="tabPanel" barHeight="3.5" barUnit='EM'>
				<g:tab>
					<g:customHeader>
						<g:Label styleName="tabHeaderLabel" text="{i18n.invoices}"></g:Label>
					</g:customHeader>
					<g:FlowPanel styleName="listWrapper panel">
						<g:SimplePanel styleName="actionWrapper">
							<g:Button ui:field="newInvoice" styleName="action-button newInvoice" text="{i18n.newInvoice}"></g:Button>
						</g:SimplePanel>
						<i:InvoiceList ui:field="invoiceList"></i:InvoiceList>
					</g:FlowPanel>
				</g:tab>
				<g:tab>
					<g:customHeader>
						<g:Label styleName="tabHeaderLabel" text="{i18n.estimates}"></g:Label>
					</g:customHeader>
					<g:FlowPanel styleName="listWrapper panel">
						<g:SimplePanel styleName="actionWrapper">
							<g:Button ui:field="newEstimation" styleName="action-button newEstimation" text="{i18n.newEstimation}"></g:Button>
						</g:SimplePanel>
						<i:EstimationList ui:field="estimationList"></i:EstimationList>
					</g:FlowPanel>
				</g:tab>

			</g:TabLayoutPanel>
		</g:SimpleLayoutPanel>

	</g:FlowPanel>

</ui:UiBinder> 