<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n" />
	<ui:with type="com.novadart.novabill.frontend.client.resources.GlobalCss"
		field="g"></ui:with>

	<ui:style
		type="com.novadart.novabill.frontend.client.view.center.payment.PaymentViewImpl.Style">
			.label {
				
			}
			
			.value {
				
			}
			
			.sectionLabel {
				font-weight: bold;
				font-size: 1.5em;
				text-transform: uppercase;
			}
		</ui:style>

	<g:FlowPanel>
		<g:Label styleName="{style.sectionLabel}" text="{i18n.createPaymentType}" />
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<c:CellTable ui:field="payments" />
				<g:Button ui:field="newPayment" styleName="{g.button}"
					text="{i18n.add}" />
			</g:VerticalPanel>

			<g:HTML ui:field="description"></g:HTML>
		</g:HorizontalPanel>
	</g:FlowPanel>



</ui:UiBinder> 