<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:w="urn:import:com.novadart.novabill.frontend.client.ui.west">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>
	<ui:with type="com.novadart.novabill.frontend.client.resources.ImageResources" field="img"></ui:with>

	<g:FlowPanel styleName="clientListWrapper">

		<g:FlowPanel ui:field="clientContainer" styleName="clientContainer">
			<g:HorizontalPanel styleName="clientsHeader">
				<g:Label styleName="clients" text="{i18n.clients}"></g:Label>
				<g:Button styleName="addClient" ui:field="addClient" text="{i18n.newClient}"></g:Button>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:TextBox styleName="filterClient" ui:field="clientFilter"></g:TextBox>
				<g:Image styleName="cleanFilterClient" ui:field="cleanClientFilter" url="{img.delete.getSafeUri.asString}" />
			</g:HorizontalPanel>
			<g:SimplePanel styleName="clientListContainer" ui:field="clientListContainer">
				<c:CellList ui:field="clientList"></c:CellList>
			</g:SimplePanel>
			
		</g:FlowPanel>

	</g:FlowPanel>

</ui:UiBinder> 