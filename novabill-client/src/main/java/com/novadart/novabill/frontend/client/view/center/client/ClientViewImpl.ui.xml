<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:i="urn:import:com.novadart.novabill.frontend.client.widget.list.impl" xmlns:gwtshared="urn:import:com.novadart.gwtshared.client">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<g:FlowPanel>
		<g:Label styleName="clientName" ui:field="clientName"></g:Label>
		<g:HTML styleName="clientDetails" ui:field="clientDetails"></g:HTML>
		<g:ToggleButton styleName="contact" ui:field="contact" text="{i18n.contact}" />
		<!-- <g:Label styleName="contact" ui:field="contact" text="{i18n.contact}"></g:Label> -->
		<g:HorizontalPanel ui:field="clientOptions" styleName="clientOptions">
			<g:Button styleName="modifyClient button" ui:field="modifyClient" text="{i18n.modifyClient}" />
			<gwtshared:LoaderButton ui:field="cancelClient" text="{i18n.cancelClient}" />
		</g:HorizontalPanel>

		<g:SimpleLayoutPanel ui:field="clientMainBody" styleName="clientMainBody">
			<g:TabLayoutPanel ui:field="tabPanel" barHeight="36" barUnit='PX'> <!-- TODO use PX because of a GWT bug http://code.google.com/p/google-web-toolkit/issues/detail?id=4694&can=5 To replace with 3.5 EM -->
				<g:tab>
					<g:customHeader>
						<g:Label styleName="tabHeaderLabel" text="{i18n.invoices}"></g:Label>
					</g:customHeader>
					<g:FlowPanel ui:field="listWrapperInvoice" styleName="listWrapper panel">
						<g:SimplePanel ui:field="actionWrapperInvoice" styleName="actionWrapper">
							<g:Button ui:field="newInvoice" styleName="action-button newInvoice" text="{i18n.newInvoice}"></g:Button>
						</g:SimplePanel>
						<g:ScrollPanel ui:field="scrollInvoice">
							<i:InvoiceList ui:field="invoiceList"></i:InvoiceList>
						</g:ScrollPanel>
					</g:FlowPanel>
				</g:tab>
				<g:tab>
					<g:customHeader>
						<g:Label styleName="tabHeaderLabel" text="{i18n.estimates}"></g:Label>
					</g:customHeader>
					<g:FlowPanel ui:field="listWrapperEstimation" styleName="listWrapper panel">
						<g:SimplePanel ui:field="actionWrapperEstimation" styleName="actionWrapper">
							<g:Button ui:field="newEstimation" styleName="action-button newEstimation" text="{i18n.newEstimation}"></g:Button>
						</g:SimplePanel>
						<g:ScrollPanel ui:field="scrollEstimation">
							<i:EstimationList ui:field="estimationList"></i:EstimationList>
						</g:ScrollPanel>
					</g:FlowPanel>
				</g:tab>
				<g:tab>
					<g:customHeader>
						<g:Label styleName="tabHeaderLabel" text="{i18n.transportDocumentsTab}"></g:Label>
					</g:customHeader>
					<g:FlowPanel ui:field="listWrapperTransport" styleName="listWrapper panel">
						<g:SimplePanel ui:field="actionWrapperTransport" styleName="actionWrapper">
							<g:Button ui:field="newTransportDocument" styleName="action-button newTransportDocument" 
							text="{i18n.newTransportDocument}"></g:Button>
						</g:SimplePanel>
						<g:ScrollPanel ui:field="scrollTransport">
							<i:TransportDocumentList ui:field="transportDocumentList"></i:TransportDocumentList>						
						</g:ScrollPanel>
					</g:FlowPanel>
				</g:tab>
				<g:tab>
					<g:customHeader>
						<g:Label styleName="tabHeaderLabel" text="{i18n.creditNotes}"></g:Label>
					</g:customHeader>
					<g:FlowPanel ui:field="listWrapperCredit" styleName="listWrapper panel">
						<g:SimplePanel ui:field="actionWrapperCredit" styleName="actionWrapper">
							<g:Button ui:field="newCreditNote" styleName="action-button newCreditNote" text="{i18n.newCreditNote}"></g:Button>
						</g:SimplePanel>
						<g:ScrollPanel ui:field="scrollCredit">
							<i:CreditNoteList ui:field="creditNoteList"></i:CreditNoteList>						
						</g:ScrollPanel>
					</g:FlowPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:SimpleLayoutPanel>

	</g:FlowPanel>

</ui:UiBinder> 