<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:i="urn:import:com.novadart.novabill.frontend.client.widget.list.impl"
	xmlns:l="urn:import:com.novadart.novabill.frontend.client.widget.list">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>
		
	<ui:with type="com.novadart.novabill.frontend.client.resources.GlobalCss" field="g"></ui:with>

	<ui:style field="s" type="com.novadart.novabill.frontend.client.view.center.home.HomeViewImpl.Style" >
		@external gwt-TabBarItem, gwt-TabBarItem-selected;
		
		.newEstimation {
			width: 10em;
		}
		
		.newCreditNote {
			width: 12em;
		}
		
		.newTransportDocument {
			width: 16em;
		}
		
		.businessPanel {
			margin: 0 auto;
			width: 80%;
			font-size: 1.2em;
			margin-top: 1em;
			padding: 1em;
			border: 0.1em solid #DDD;
			-moz-box-shadow: 2px 2px 2px #CCC;
			-webkit-box-shadow: 2px 2px 2px #CCC;
			box-shadow: 2px 2px 2px #CCC;
			line-height: 1.5em;
		}
		
		.businessPanel td {
			padding: 0.5em;
			text-align: center;
		}
		
		.businessPanel .businessName {
			font-weight: bold;
			text-transform: uppercase;
		}
		
		.businessPanel .businessLogo {
			height: 8em;
			cursor: pointer;
		}
		
		.businessPanel .businessDetails {
			padding: 1em;
		}
		
		.businessPanel .businessDetails a {
			font-weight: normal;
		}
		
		.tabPanel {
			width: 80%;
			margin: 1em auto;
		}
		
		.listWrapper {
			padding: 0.8em 2em;
		}
		
		.gwt-TabBarItem {
			padding: 0.5em 1em;
			background-color: white;
			border: 0.1em solid #DDD;
			width: 9em;
			border-top-right-radius: 1em;
			border-top-left-radius: 1em;
			font-size: 1.2em;
			cursor: pointer;
		}
		
		.gwt-TabBarItem:HOVER {
			text-decoration: underline;
		}
		
		.gwt-TabBarItem-selected:HOVER {
			text-decoration: none;
		}
		
		.gwt-TabBarItem-selected {
			background-color: #EEE;
			font-weight: bold;
		}
		
		.homeBody {
			width: 80%;
			margin: 1em auto 0;
		}
		
		.scrollHome {
			height: 100%;
		}
		
		.actions {
			margin: 0 auto;
		}
		
		.actions button {
			cursor: pointer;
		}
		
		.invoicesTitle {
			font-size: 1.2em;
			font-weight: bold;
			margin: 0 0 0.5em
		}
		
		.yourDocsLabel {
			width: 80%;
			margin: 2em auto 0;
			font-size: 1.2em;
			text-transform: uppercase;
			font-weight: bold;
		}
		
		.currentDate {
			text-align: right;
			color: #333;
			height: 1.2em;
		}
		
		.currentDate .date {
			margin-right: 1em;
		}
	</ui:style>
	
	<ui:style field="sm" type="com.novadart.novabill.frontend.client.view.center.home.HomeViewImpl.ShowMoreStyle">
		.showmore {
			text-align: center;
			margin-top: 0.5em;
		}
		
		.button {
			width: 40%;
		}
		
		.loader {}
	</ui:style>

	<g:FlowPanel height="100%">

		<g:HTML ui:field="date" styleName="{s.currentDate}"></g:HTML>

		<g:ScrollPanel styleName="{s.scrollHome}">
			<g:FlowPanel>
				<g:SimplePanel ui:field="tipWelcome" />

				<g:HorizontalPanel styleName="{s.businessPanel}">
					<g:Image ui:field="businessLogo" styleName="{s.businessLogo}" />
					<g:HTML ui:field="businessDetails" styleName="{s.businessDetails}" />
				</g:HorizontalPanel>


				<g:HorizontalPanel ui:field="actions" styleName="{s.actions}">
					<g:Button ui:field="newInvoice" styleName="{g.actionButton}"
						text="{i18n.newInvoice}"></g:Button>
					<g:Button ui:field="newEstimation" styleName="{g.actionButton} {s.newEstimation}"
						text="{i18n.newEstimation}"></g:Button>
					<g:Button ui:field="newCreditNote" styleName="{g.actionButton} {s.newCreditNote}"
						text="{i18n.newCreditNote}"></g:Button>
					<g:Button ui:field="newTransportDocument" styleName="{g.actionButton} {s.newTransportDocument}"
						text="{i18n.newTransportDocument}"></g:Button>
				</g:HorizontalPanel>

				<g:Label styleName="{s.yourDocsLabel}" text="{i18n.yourDocs}" />
				<g:SimplePanel ui:field="tipDocs" />
				<g:FlowPanel styleName="{s.tabPanel}">
					<g:TabBar ui:field="tabBar" />
					<g:SimplePanel ui:field="tabBody" />
				</g:FlowPanel>

			</g:FlowPanel>
		</g:ScrollPanel>
	</g:FlowPanel>

</ui:UiBinder> 