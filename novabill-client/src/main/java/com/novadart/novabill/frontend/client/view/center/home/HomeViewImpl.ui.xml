<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:i="urn:import:com.novadart.novabill.frontend.client.view.widget.list.impl"
	xmlns:l="urn:import:com.novadart.novabill.frontend.client.view.widget.list">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<g:FlowPanel>

		<g:HTML ui:field="date" styleName="currentDate"></g:HTML>

		<g:ScrollPanel styleName="scrollHome">
			<g:FlowPanel styleName="scrollHomeBody">
				<g:HTML ui:field="welcome" styleName="welcomeMessage"></g:HTML>
	
				<g:HorizontalPanel ui:field="actions" styleName="actions">
					<g:Button ui:field="newInvoice" styleName="action-button newInvoice"
						text="{i18n.newInvoice}"></g:Button>
					<g:Button ui:field="newEstimation" styleName="action-button newEstimation"
						text="{i18n.newEstimation}"></g:Button>
					<g:Button ui:field="newCreditNote" styleName="action-button newCreditNote"
						text="{i18n.newCreditNote}"></g:Button>
					<g:Button ui:field="newTransportDocument" styleName="action-button newTransportDocument"
						text="{i18n.newTransportDocument}"></g:Button>
				</g:HorizontalPanel>
				
				<g:Label styleName="yourDocsLabel" text="{i18n.yourDocs}"></g:Label>
				<g:Label ui:field="welcomeMessage" styleName="welcomeMessage" text="{i18n.welcomeMessageDocuments}" visible="false"></g:Label>
				<g:FlowPanel styleName="tabPanel">
					<g:TabBar ui:field="tabBar" styleName="tabBar" />
					<g:SimplePanel ui:field="tabBody" styleName="tabBody" />				
				</g:FlowPanel>
				
			</g:FlowPanel>
		</g:ScrollPanel>
	</g:FlowPanel>

</ui:UiBinder> 