<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.novadart.novabill.frontend.client.view.west.configuration.ConfigurationWestViewImpl.Style">
		.menu {
			margin: 4em auto 0;
		}
		
		.menuItem {
			font-size: 1.3em;
			padding: 1em 0;
			text-align: left;
			text-shadow: none;
			font-weight: bold;
			text-transform: uppercase;
		}
		
		.selectedMenuItem {
			text-decoration: underline;	
		}
	</ui:style>

	<g:VerticalPanel styleName="{style.menu}">
		<g:Hyperlink styleName="{style.menuItem}" ui:field="general" />
		<g:Hyperlink styleName="{style.menuItem}" ui:field="payment" />
	</g:VerticalPanel>

</ui:UiBinder> 