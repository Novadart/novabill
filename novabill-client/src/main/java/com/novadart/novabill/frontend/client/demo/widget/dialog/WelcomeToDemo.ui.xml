<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.novadart.novabill.frontend.client.demo.i18n.DemoMessages"
		field="i18n" />
	<ui:with type="com.novadart.novabill.frontend.client.resources.GlobalCss"
		field="g" />
	<ui:with
		type="com.novadart.novabill.frontend.client.demo.resources.DemoImageResources"
		field="img"></ui:with>
	<ui:style>
		.image {
			float: right;
			width: 48px;
		}
		
		h1 {
			font-size: 1.5em;
			font-weight: bold;
			font-style: italic;
			letter-spacing: 3px;
			font-variant: small-caps;
		}
		
		p {
			margin-top: 0.5em;
			font-size: 1.2em;
		}
		
		ul li {
			margin-top: 0.5em;
			font-size: 1.2em;
			list-style: circle;
			margin-left: 2em;
		}
		
		.body {
			background-color: white;
			padding: 2em;
		}
		
		.inner {
			width: 30em;
			min-height: 10em;
		}
		
		.closeButton {
			margin: 2em auto 0;
			display: block;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.body}">
		<g:HTMLPanel styleName="{style.inner}">
			<img src="{img.invoice.getSafeUri}" class="{style.image}" />
			<h1>
				<g:HTML text="Benvenuto!"></g:HTML>
			</h1>
			<br />
			<p>
				<g:HTML text="Grazie per avere deciso di provare Novabill."></g:HTML>
			</p>
			<br />
			<p>
				<g:HTML
					text="Questo è un ambiente dimostrativo, dove potrai provare molte delle funzionalità disponibili."></g:HTML>
			</p>
			<p>
				<g:HTML text="Un paio di note:"></g:HTML>
				<ul>
					<li>
						<g:HTML
							text="alcune funzionalità (ad esempio la ricerca) non sono disponibili in questa modalità."></g:HTML>
					</li>
					<li>
						<g:HTML
							text="I dati inseriti vengono cancellati appena si abbandona l'ambiente dimostrativo."></g:HTML>
					</li>
				</ul>
			</p>
		</g:HTMLPanel>

		<g:Button ui:field="closeDialog" styleName="{g.button} {style.closeButton}"
			text="{i18n.closeWelcomeDialog}" />
	</g:FlowPanel>

</ui:UiBinder> 