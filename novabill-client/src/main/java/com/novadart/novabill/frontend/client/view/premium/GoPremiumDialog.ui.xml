<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with
		type="com.novadart.novabill.frontend.client.resources.ImageResources"
		field="img"></ui:with>

	<ui:style field="s">
		.GoPremiumDialog {
			\-webkit-transition: all 1s;
			\-moz-transition: all 1s;
			\-ms-transition: all 1s;
			\-o-transition: all 1s;
			transition: all 1s;
		}
		
		.GoPremiumDialog .premiumBody {
			background-color: white;
			width: 35em;
			padding: 2em;
		}
		
		.GoPremiumDialog .premiumBody .closeButton {
			width: 1.5em;
			position: absolute;
			right: 1em;
			top: 1em;
			cursor: pointer;
		}
		
		.GoPremiumDialog h2 {
			font-size: 1.3em;
			font-weight: bold;
			text-align: center;
			padding: 1em 0;
		}
		
		.GoPremiumDialog p {
			font-size: 1.2em;
			text-align: justify;
		}
		
		.GoPremiumDialog p.par1 {
			margin-top: 1em;
		}
		
		.GoPremiumDialog p.par2 {
			margin-top: 2em;
		}
		
		.GoPremiumDialog p.par3 {
			margin-top: 2em;
		}
		
		.GoPremiumDialog .goPremium {
			text-align: center;
			margin-top: 2em;
			border: 0.1em solid #B9F2B3;
			background-color: #66C25B;
			font-size: 1.2em;
		}
		
		.GoPremiumDialog .noThanks {
			text-align: center;
			margin-top: 1em;
			cursor: pointer;
			font-size: 1.2em;
		}
		
		.GoPremiumDialog .noThanks:HOVER {
			text-decoration: underline;
		}
	</ui:style>


	<g:HTMLPanel styleName="{s.GoPremiumDialog} {s.premiumBody}">
		<g:Image ui:field="closeButton" styleName="{s.closeButton}"
			url="{img.delete.getSafeUri.asString}" />
		<h2>You have reached the limit of your free account quota</h2>
		<p class="{s.par1}">
			Thank you very much for using Novabill and for taking a
			ride with us in the world of invoice making :)
		</p>

		<p class="{s.par2}">
			You have reached the quota limit for the free account.
			<br />
			Please purchase a premium account to continue using Novabill. It will
			cost you only 5â‚¬ per month.
		</p>
		<p class="{s.par3}">
			<a href="javascript:void(0);">Here</a>
			you can review the benefits of using the premium features.
			<br />
			We are looking forward to keep working with you and ease your daily
			job in invoice management.
			<br />
			<br />
			Thanks!
			<br />
			The Novabill Team
		</p>
		<br />
		<g:Label ui:field="goPremium" styleName="{s.goPremium} button"
			text="Activate Premium" />

		<g:Label ui:field="noThanks" styleName="{s.noThanks}"
			text="No thanks, I don't want to enable Premium right now" />
	</g:HTMLPanel>

</ui:UiBinder>