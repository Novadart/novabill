<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:com.novadart.gwtshared.client.textbox">
	
	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N" field="i18n"></ui:with>
	
	<g:FlowPanel styleName="body">
		<g:Label styleName="title" text="{i18n.selectClient}"></g:Label>
		
		<g:HorizontalPanel styleName="filterContainer">
			<t:RichTextBox ui:field="filter"></t:RichTextBox>
			<g:Image ui:field="clearFilter"></g:Image>
		</g:HorizontalPanel>
		<g:ScrollPanel styleName="listWrapperScroll" ui:field="listWrapperScroll">
			<g:SimplePanel ui:field="listWrapper"></g:SimplePanel>
		</g:ScrollPanel>
		
		<g:HorizontalPanel styleName="buttons">
			<g:Button ui:field="ok" enabled="false" styleName="button submit" text="{i18n.submit}"></g:Button>
			<g:Button ui:field="cancel" text="{i18n.cancel}" styleName="button"></g:Button>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder> 