<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:i="urn:import:com.novadart.novabill.frontend.client.ui.widget.list.impl"
	xmlns:l="urn:import:com.novadart.novabill.frontend.client.ui.widget.list">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>

	<g:FlowPanel>

		<g:HTML ui:field="date" styleName="currentDate"></g:HTML>
		
		<g:HTML ui:field="welcome" styleName="welcomeMessage"></g:HTML>
		
		<g:HorizontalPanel styleName="actions">
			<g:Button ui:field="newInvoice" styleName="action-button newInvoice" text="{i18n.newInvoice}"></g:Button>
			<g:Button ui:field="newEstimation" styleName="action-button newEstimation" text="{i18n.newEstimation}"></g:Button>
			<g:Button ui:field="newCreditNote" styleName="action-button newCreditNote" text="{i18n.newCreditNote}"></g:Button>
		</g:HorizontalPanel>
		
		<g:FlowPanel styleName="homeBody">
			<g:Label styleName="invoicesTitle" text="{i18n.invoices}"></g:Label>
			<g:ScrollPanel styleName="listWrapper panel">
				<i:InvoiceList ui:field="invoiceList"></i:InvoiceList>
			</g:ScrollPanel>
			<l:ShowMoreButton ui:field="showMore" styleName="showMore"></l:ShowMoreButton>
		</g:FlowPanel>

	</g:FlowPanel>

</ui:UiBinder> 