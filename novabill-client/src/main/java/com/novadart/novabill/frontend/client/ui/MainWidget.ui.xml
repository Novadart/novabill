<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.novadart.novabill.frontend.client.i18n.I18N"
		field="i18n"></ui:with>
	<ui:with type="com.novadart.novabill.frontend.client.resources.Image"
		field="img"></ui:with>

	<g:DockLayoutPanel styleName="MainWidget" unit='EM'>

		<g:north size="3">
			<g:FlowPanel styleName="header">
				<g:Image styleName="logo" url="{img.bullet.getSafeUri.asString}"></g:Image>
				<g:Label styleName="productName" text="Novabill"></g:Label>
				<g:HTML styleName="stats" ui:field="stats"></g:HTML>
				<g:Button styleName="exitButton" text="{i18n.logout}"
					ui:field="logout"></g:Button>
			</g:FlowPanel>
		</g:north>

		<g:west size="25">
			<g:SimplePanel styleName="westContainer" ui:field="westContainer"></g:SimplePanel>
		</g:west>

		<g:center>
			<g:ScrollPanel styleName="centerContainer" ui:field="centerContainer"></g:ScrollPanel>
		</g:center>

		<g:south size="2">
			<g:HorizontalPanel styleName="southContainer">
				<g:Button ui:field="changeButton" styleName="changeButton" text="{i18n.modify}"></g:Button>
				<g:HTML styleName="banner" ui:field="businessBanner"></g:HTML>
			</g:HorizontalPanel>
		</g:south>

	</g:DockLayoutPanel>
</ui:UiBinder> 