<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.novadart.novabill</groupId>
	<artifactId>novabill</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>The Novabill Project</name>
	<url>http://labs.novadart.com:8080</url>
	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.6</java.version>
		<aspectj.version>1.6.12.M2</aspectj.version>
		<roo.version>1.2.0.RELEASE</roo.version>
		<slf4j.version>1.6.2</slf4j.version>
		<spring.version>3.1.0.RELEASE</spring.version>
		<spring-security.version>3.1.0.RELEASE</spring-security.version>
		<gwtVersion>2.4.0</gwtVersion>
	</properties>

	<scm>
		<connection>scm:git:ssh://gitolite@labs.novadart.com/novadart/novadart-novabill.git</connection>
		<developerConnection>scm:git:ssh://gitolite@labs.novadart.com/novadart/novadart-novabill.git</developerConnection>
	</scm>

	<modules>
		<module>novabill-server</module>
		<module>novabill-client</module>
		<module>novabill-shared</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>

		</plugins>

	</build>
	
	<distributionManagement>
		
		<repository>
			<id>novadart-labs</id>
			<url>http://labs.novadart.com:8888/archiva/repository/internal/</url>
		</repository>
		
		<snapshotRepository>
			<id>novadart-labs</id>
			<url>http://labs.novadart.com:8888/archiva/repository/snapshots/</url>
		</snapshotRepository>
	
	
	</distributionManagement>



</project>