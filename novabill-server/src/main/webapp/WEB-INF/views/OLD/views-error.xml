<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" 
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

	<definition extends="baseError" name="resourceNotFound">
		<put-attribute name="pagelinks" value="/WEB-INF/views/error/errorPageLinks.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/error/resourceNotFound.jsp" />
	</definition>

	<definition extends="baseError" name="uncaughtException">
		<put-attribute name="pagelinks" value="/WEB-INF/views/error/errorPageLinks.jsp" />
		<put-attribute name="body"	value="/WEB-INF/views/error/uncaughtException.jsp" />
	</definition>
	
	<definition name="invalidActivationRequest" extends="baseFeedback">
		<put-attribute name="feedbackMessage" value="/WEB-INF/views/error/invalidActivationRequest.jsp" />
	</definition>
	
	<definition name="invalidForgotPasswordRequest" extends="baseFeedback">
		<put-attribute name="feedbackMessage" value="/WEB-INF/views/error/invalidForgotPasswordRequest.jsp" />
	</definition>
	
	<definition extends="baseError" name="dataAccessFailure">
		<put-attribute name="pagelinks" value="/WEB-INF/views/error/errorPageLinks.jsp" />
		<put-attribute name="body"	value="/WEB-INF/views/error/uncaughtException.jsp" />
	</definition>
</tiles-definitions>
