<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
    xmlns:beans="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    
    <!-- REST service security configuration -->
    <http create-session="never" use-expressions="true" pattern="/rest/1/**">
        <intercept-url pattern="/rest/1/**" access="isAuthenticated()" />
        <http-basic />
    </http>
    
    <!-- HTTP security configurations -->
    <http auto-config="true" use-expressions="true" entry-point-ref="novabillAuthenticationEntryPoint">
    	
        <form-login login-processing-url="/resources/login_check"
        			authentication-success-handler-ref="novabillAuthenticationSuccessHandler"
        			authentication-failure-handler-ref="novabillAuthenticationFailureHandler"/>
        <logout logout-url="/resources/logout" logout-success-url="/"/>
        <!-- Configure these elements to secure URIs in your application -->
        
        <!-- NOTE exposed till Novabill 3.0 -->
        <intercept-url pattern="/private/feedback" access="permitAll" />
        
        <intercept-url pattern="/private/**" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**/business.rpc" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**/client.rpc" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**/invoice.rpc" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**/estimation.rpc" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**/creditnote.rpc" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**/transportdoc.rpc" access="hasAnyRole('ROLE_BUSINESS_FREE', 'ROLE_BUSINESS_PREMIUM')" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/resources/**" access="permitAll" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/login" access="permitAll" requires-channel="${privateArea.channel.value}" />
        <intercept-url pattern="/**" access="permitAll" requires-channel="${privateArea.channel.value}" />
        <session-management session-fixation-protection="migrateSession"/>
        <remember-me key="${rememberme.key}" token-validity-seconds="345600" data-source-ref="dataSource"/>
    </http>
    <!-- Configure Authentication mechanism -->
    <authentication-manager alias="authenticationManager">
        <!-- SHA-256 values can be produced using 'echo -n your_desired_password | sha256sum' (using normal *nix environments) -->
        <authentication-provider user-service-ref="principalDetailsService">
	    	<password-encoder ref="passwordEncoder">
	    		<salt-source user-property="creationTime" />
	    	</password-encoder>
    	</authentication-provider>
    </authentication-manager>
    
    <beans:bean id="passwordEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
    	<beans:constructor-arg value="256"></beans:constructor-arg></beans:bean>
    
    <beans:bean id="novabillAuthenticationEntryPoint" class="com.novadart.novabill.springsecurity.AuthenticationEntryPoint">
    	<beans:constructor-arg value="/login"></beans:constructor-arg>
    </beans:bean>
    
    <beans:bean id="novabillAuthenticationSuccessHandler" class="com.novadart.novabill.springsecurity.AuthenticationSuccessHandler">
    	<beans:property name="defaultTargetUrl" value="/private/"/>
    </beans:bean>
    
    <beans:bean id="novabillAuthenticationFailureHandler" class="com.novadart.novabill.springsecurity.AuthenticationFailureHandler">
    	<beans:property name="defaultFailureUrl" value="/login?login_error=t"/>
    </beans:bean>
</beans:beans>
